{
  "Website": {
    "Maintenance": {
      "IsActivated": false,
      "EndTime": "Soon..."
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": "Information",
    // Targets where we want to write our log (list here : https://github.com/serilog/serilog/wiki/Provided-Sinks)
    "WriteTo": [
      // https://github.com/serilog/serilog-sinks-console
      {
        "Name": "Console"
      },
      // https://github.com/serilog/serilog-sinks-file
      {
        "Name": "File",
        "Args": {
          "path": "Logs/api.txt",
          "rollingInterval": "Day"
        }
      },
      // https://github.com/serilog-contrib/serilog-sinks-elasticsearch
      {
        "name": "elasticsearch",
        "args": {
          "nodeuris": "http://localhost:9200",
          "indexFormat": "polkanalysis-webapp-{0:yyyy.MM}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "Polkanalysis.Api"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"SubstrateDb": "Host=db:5433; Username=postgres; Password=test; Database=Polkanalysis"
    "SubstrateDb": "Host=localhost:5432; Username=postgres; Password=admin; Database=Polkanalysis"
  },
  "SubstrateEndpoint": {
    "Endpoint": "wss://polkadot-rpc.dwellir.com",
    "Name": "Polkadot"
  },
  "Api": {
    "uri": "https://localhost:7066"
  },
  "Prometheus": {
    "uri": "https://localhost:1234"
  },
