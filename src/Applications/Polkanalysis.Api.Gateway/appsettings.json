      //  "Match": {
      //    "Path": "api/mythos/{**catchAll}"
      //  }
      //}
    },
    "Clusters": {
      "polkadot_cluster": {
        "Destinations": {
          "polkadot_destination": {
            "Address": "https://localhost:7067/",
            "Swaggers": [ // https://github.com/andreytreyt/yarp-swagger
              {
                "Paths": [
                  "/swagger/v1/swagger.json"
                ]
              }
            ]
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health" // Health check endpoint
          }
        },
        "Metadata": {
          "ConsecutiveFailuresHealthPolicy.Threshold": "3"
        }
      },
