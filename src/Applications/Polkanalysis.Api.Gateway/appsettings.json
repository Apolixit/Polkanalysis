{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "polkadot_route": {
        "ClusterId": "polkadot_cluster",
        "Match": {
          "Path": "/api/polkadot/{**catch-all}"
        }
      },
      //"peoplechain_route": {
      //  "ClusterId": "peoplechain_cluster",
      //  "Match": {
      //    "Path": "api/peoplechain/{**catchAll}"
      //  }
      //},
