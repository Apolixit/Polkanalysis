@using Blazscan.SubstrateDecode.Event;
<table>
    <tr>
        <td>
            @Tree.Name <br />
            @Tree.HumanData
        </td>
        <td>
            @Tree.Children.First().Name <br />
            @Tree.Children.First().HumanData
        </td>
    </tr>
</table>

@code {
    [Parameter] public EventNode Tree { get; set; }

    protected override void OnInitialized()
    {
        if (Tree == null) throw new ArgumentNullException($"{nameof(Tree)} (EventNode parameter) is empty !");
    }
}
