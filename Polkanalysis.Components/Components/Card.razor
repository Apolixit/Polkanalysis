<div class="card">
    <div class="card-body">
        @if(!string.IsNullOrEmpty(Title))
        {
            <h5 class="card-title">@Title</h5>
        }
        
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public RenderFragment? Content { get; set; } = null;
}
